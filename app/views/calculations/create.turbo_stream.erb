<% if defined?(@result) && @result %>
  <%= turbo_stream.replace "results" do %>
    <%= turbo_frame_tag "results" do %>
      <%= render "results", result: @result %>
    <% end %>
  <% end %>

  <%= turbo_stream.replace "calc_inputs" do %>
    <%= turbo_frame_tag "calc_inputs" do %>
      <%= render "form_inputs", input: @input %>
    <% end %>
  <% end %>

  <%= turbo_stream.replace "recipe" do %>
    <%= turbo_frame_tag "recipe" do %>
      <%= render "recipe_form", total_carbs: @result[:total_carbs] %>
    <% end %>
  <% end %>
<% end %>
