<div class="container mx-auto px-4 py-8 max-w-4xl">
  <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Carb Calc</h1>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <!-- Formularz -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-6 text-gray-700">Parametry treningu</h2>

      <%= form_with scope: :calc, url: calculations_path, local: true, class: "space-y-4" do |form| %>
        <!-- Total Time -->
        <div>
          <%= form.label :total_min, "Całkowity czas (minuty)", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.number_field :total_min, value: @input[:total_min],
                class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                min: 1, step: 1 %>
        </div>

        <!-- Strefy -->
        <div class="grid grid-cols-2 gap-4">
          <div>
            <%= form.label :z1, "Z1 (min)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :z1, value: @input[:z1],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                  min: 0, step: 1 %>
          </div>
          <div>
            <%= form.label :z2, "Z2 (min)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :z2, value: @input[:z2],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                  min: 0, step: 1 %>
          </div>
          <div>
            <%= form.label :z3, "Z3 (min)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :z3, value: @input[:z3],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                  min: 0, step: 1 %>
          </div>
          <div>
            <%= form.label :z4, "Z4 (min)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :z4, value: @input[:z4],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                  min: 0, step: 1 %>
          </div>
          <div>
            <%= form.label :z5, "Z5 (min)", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= form.number_field :z5, value: @input[:z5],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500",
                  min: 0, step: 1 %>
          </div>
        </div>

        <!-- Ukryte pola wymagane przez walidację -->
        <%= form.hidden_field :mass_kg, value: @input[:mass_kg] %>
        <%= form.hidden_field :scale_by_mass, value: @input[:scale_by_mass] %>
        <%= form.hidden_field :gut_tolerance, value: @input[:gut_tolerance] %>
        <%= form.hidden_field :weather, value: @input[:weather] %>
        <%= form.hidden_field :altitude, value: @input[:altitude] %>
        <%= form.hidden_field :gel_g, value: @input[:gel_g] %>
        <%= form.hidden_field :bottle_g, value: @input[:bottle_g] %>
        <%= form.hidden_field :bottle_ml, value: @input[:bottle_ml] %>
        <%= form.hidden_field :drink_g_per_100ml, value: @input[:drink_g_per_100ml] %>

        <!-- Przycisk -->
        <div class="pt-4">
          <%= form.submit "Oblicz",
                class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium" %>
        </div>
      <% end %>

      <!-- Błędy walidacji -->
      <% if defined?(@errors) && @errors&.any? %>
        <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-md">
          <h3 class="text-sm font-medium text-red-800 mb-2">Błędy walidacji:</h3>
          <ul class="text-sm text-red-700 list-disc list-inside">
            <% @errors.each do |field, messages| %>
              <% messages.each do |message| %>
                <li><%= field %>: <%= message %></li>
              <% end %>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <!-- Wyniki -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold mb-6 text-gray-700">Wyniki</h2>

      <%= turbo_frame_tag "results" do %>
        <% if defined?(@result) && @result&.any? %>
          <%= render "results", result: @result %>
        <% else %>
          <div class="text-center text-gray-500 py-8">
            <p>Wprowadź parametry treningu i kliknij "Oblicz" aby zobaczyć wyniki</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
