<div class="w-full max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to root_path, class: "text-blue-600 hover:text-blue-800 text-sm font-medium" do %>
      ← Wróć do strony głównej
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Kalkulator żelu</h1>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= turbo_frame_tag "gel_calc_form" do %>
      <%= render "form", gel_calc: @gel_calc %>
    <% end %>

    <!-- Validation errors -->
    <% if defined?(@errors) && @errors&.any? %>
      <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-md">
        <h3 class="text-sm font-medium text-red-800 mb-2">Błędy walidacji:</h3>
        <ul class="text-sm text-red-700 list-disc list-inside">
          <% @errors.each do |field, messages| %>
            <% messages.each do |message| %>
              <li><%= field %>: <%= message %></li>
            <% end %>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>

  <!-- Results -->
  <div class="mt-8">
    <%= turbo_frame_tag "gel_result" do %>
      <% if defined?(@result) && @result %>
        <%= render "result", result: @result %>
      <% end %>
    <% end %>
  </div>
</div>

